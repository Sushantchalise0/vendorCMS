<h1>COMMENTS</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Owner</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
      {{#each comments}}
    <tr>
      <th scope="row">{{id}}</th>
      <td>{{user.firstName}}</td>
      <td><input data-id="{{id}}" type="checkbox" name="approveComment" {{#if approveComment}} checked {{/if}}></td>
      <td>{{generateTime date 'MMMM Do YYYY'}}</td>
      <td>
            <form action="/admin/comments/{{id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">DELETE</button>
            </form>
        </td>
    </tr>
    {{/each}}
  </tbody>
</table>