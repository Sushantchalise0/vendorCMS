<h1>EDIT CATEGORY HERE</h1>

<form action="/admin/category/edit/{{categories.id}}?_method=PUT" method="post" enctype="multipart/form-data">

      <div class="form-group">
        <label for="cat_name"> Category Name </label>
        <input type="text" name="cat_name" class="form-control" id="cat_name" value="{{categories.cat_name}}">
    </div>
     <div class="form-group">
        <label for="file"> Upload Icon </label>
        <input type="file" name="img" class="form-control" value="{{categories.img}}">
    </div>
    <button type="submit" class="btn btn-primary"> Update </button>

</form>